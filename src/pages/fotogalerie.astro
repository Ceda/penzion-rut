---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { getImage } from "astro:assets";
import { ROUTES } from "../config/routes";

// Dynamicky načti obrázky z jednotlivých složek
const historieImagesAll = import.meta.glob<{ default: ImageMetadata }>(
  "../images/historie/*.{jpg,JPG}",
  { eager: true }
);
const ubytovaniImagesAll = import.meta.glob<{ default: ImageMetadata }>(
  "../images/ubytovani/*.{jpg,JPG}",
  { eager: true }
);
const stravovaniImagesAll = import.meta.glob<{ default: ImageMetadata }>(
  "../images/galerie/*.{jpg,JPG}",
  { eager: true }
);
const regataImagesAll = import.meta.glob<{ default: ImageMetadata }>(
  "../images/regata/*.{jpg,JPG}",
  { eager: true }
);
const okoliImagesAll = import.meta.glob<{ default: ImageMetadata }>(
  "../images/okoli/*.{jpg,JPG}",
  { eager: true }
);

// Funkce pro získání obrázku podle jména a složky
const getImageByName = (name: string, folder: string = "galerie") => {
  const folders: Record<string, any> = {
    historie: historieImagesAll,
    ubytovani: ubytovaniImagesAll,
    stravovani: stravovaniImagesAll,
    regata: regataImagesAll,
    okoli: okoliImagesAll,
  };
  const path = `../images/${folder}/${name}`;
  return folders[folder]?.[path]?.default;
};

